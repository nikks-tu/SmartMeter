<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="115dp"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:padding="@dimen/margin_five"
    android:gravity="center"
    android:background="@drawable/grid_back"
    android:layout_marginBottom="@dimen/margin_five">
    <com.techuva.smartmeter.view.TextViewIcomoon
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/smile"
        android:gravity="center"
        android:id="@+id/tv_channel_icon"
        android:textColor="@color/text_color_green"
        android:textSize="30dp"
        android:padding="@dimen/margin_five"
        android:layout_margin="@dimen/margin_two"
        tools:targetApi="jelly_bean" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_three"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/app_name"
        android:id="@+id/tv_channel_name"
        android:textSize="@dimen/activity_textSize_large"
        android:padding="@dimen/margin_two"
        android:fontFamily="@fonts/AvenirLTStd-Light.otf"
        tools:targetApi="jelly_bean"
        android:textAllCaps="false"/>

</LinearLayout>
