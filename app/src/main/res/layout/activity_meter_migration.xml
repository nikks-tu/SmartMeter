<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ChangePasswordActivity"
    android:orientation="vertical"
    android:id="@+id/ll_root"
    android:background="@color/dashboard_background">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:id="@+id/ll_main"
       android:orientation="vertical">

       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/cv_meter_install_details"
           android:layout_margin="@dimen/margin_five"
           android:background="@color/white"
           android:padding="@dimen/margin_three">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_margin="@dimen/margin_five"
               android:id="@+id/ll_details">
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="@string/old_connection_summary"
                   android:id="@+id/tv_old_meter_details"
                   android:layout_margin="@dimen/margin_two"
                   android:paddingTop="@dimen/margin_two"
                   android:paddingBottom="@dimen/margin_two"
                   android:textColor="@color/text_color_dark"
                   android:textSize="@dimen/activity_textSize_small"/>
               <View
                   android:layout_width="match_parent"
                   android:layout_height="0.1dp"
                   android:background="@color/divider"
                   android:layout_marginTop="@dimen/margin_one"
                   android:layout_marginBottom="@dimen/margin_one"/>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="horizontal"
                   android:layout_margin="@dimen/margin_two">
                   <TextView
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:layout_height="wrap_content"
                       android:text="@string/new_connection_no"
                       android:id="@+id/tv_new_connection_txt"
                       android:textColor="@color/text_color_dark"
                       android:layout_margin="@dimen/margin_two"
                       android:textSize="@dimen/activity_textSize_small"/>
                   <TextView
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:layout_height="wrap_content"
                       android:id="@+id/tv_new_usn_value"
                       android:gravity="end"
                       android:textColor="@color/text_color_dark"
                       android:layout_margin="@dimen/margin_two"
                       android:textSize="@dimen/activity_textSize_small"/>
               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="horizontal"
                   android:layout_margin="@dimen/margin_two">
                   <TextView
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:layout_height="wrap_content"
                       android:text="@string/old_connection_no"
                       android:id="@+id/tv_old_connection"
                       android:textColor="@color/text_color_dark"
                       android:layout_margin="@dimen/margin_two"
                       android:textSize="@dimen/activity_textSize_small"/>
                   <TextView
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:layout_height="wrap_content"
                       android:id="@+id/tv_old_connection_value"
                       android:gravity="end"
                       android:textColor="@color/text_color_dark"
                       android:layout_margin="@dimen/margin_two"
                       android:textSize="@dimen/activity_textSize_small"/>
               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="horizontal"
                   android:layout_margin="@dimen/margin_two">
                   <TextView
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:layout_height="wrap_content"
                       android:text="@string/migrated_on"
                       android:id="@+id/tv_migrated_on_txt"
                       android:textColor="@color/text_color_dark"
                       android:layout_margin="@dimen/margin_two"
                       android:textSize="@dimen/activity_textSize_small"/>
                   <TextView
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:layout_height="wrap_content"
                       android:id="@+id/tv_migrated_on"
                       android:gravity="end"
                       android:textColor="@color/text_color_dark"
                       android:layout_margin="@dimen/margin_two"
                       android:textSize="@dimen/activity_textSize_small"/>
               </LinearLayout>


               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="horizontal"
                   android:layout_margin="@dimen/margin_two">
                   <TextView
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:layout_height="wrap_content"
                       android:text="@string/old_meter_no"
                       android:id="@+id/tv_old_meter_num_txt"
                       android:textColor="@color/text_color_dark"
                       android:layout_margin="@dimen/margin_two"
                       android:textSize="@dimen/activity_textSize_small"/>
                   <TextView
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:layout_height="wrap_content"
                       android:id="@+id/tv_old_meter_num"
                       android:gravity="end"
                       android:textColor="@color/text_color_dark"
                       android:layout_margin="@dimen/margin_two"
                       android:textSize="@dimen/activity_textSize_small"/>
               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="horizontal"
                   android:layout_margin="@dimen/margin_two">
                   <TextView
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:layout_height="wrap_content"
                       android:text="@string/connection_type_"
                       android:id="@+id/tv_connection_type_txt"
                       android:textColor="@color/text_color_dark"
                       android:layout_margin="@dimen/margin_two"
                       android:textSize="@dimen/activity_textSize_small"/>
                   <TextView
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:layout_height="wrap_content"
                       android:id="@+id/tv_connection_type"
                       android:gravity="end"
                       android:textColor="@color/text_color_dark"
                       android:layout_margin="@dimen/margin_two"
                       android:textSize="@dimen/activity_textSize_small"/>
               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="horizontal"
                   android:layout_margin="@dimen/margin_two">
                   <TextView
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:layout_height="wrap_content"
                       android:text="@string/consumer_type"
                       android:id="@+id/tv_consumer_type_txt"
                       android:textColor="@color/text_color_dark"
                       android:layout_margin="@dimen/margin_two"
                       android:textSize="@dimen/activity_textSize_small"/>
                   <TextView
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:layout_height="wrap_content"
                       android:id="@+id/tv_consumer_type"
                       android:gravity="end"
                       android:textColor="@color/text_color_dark"
                       android:layout_margin="@dimen/margin_two"
                       android:textSize="@dimen/activity_textSize_small"/>
               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="horizontal"
                   android:layout_margin="@dimen/margin_two">
                   <TextView
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:layout_height="wrap_content"
                       android:text="@string/old_meter_balance"
                       android:id="@+id/tv_old_meter"
                       android:textColor="@color/text_color_dark"
                       android:layout_margin="@dimen/margin_two"
                       android:textSize="@dimen/activity_textSize_small"/>
                   <TextView
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:layout_height="wrap_content"
                       android:id="@+id/tv_old_meter_balance"
                       android:gravity="end"
                       android:textColor="@color/text_color_dark"
                       android:layout_margin="@dimen/margin_two"
                       android:textSize="@dimen/activity_textSize_small"/>
               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="horizontal"
                   android:layout_margin="@dimen/margin_two">
                   <TextView
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:layout_height="wrap_content"
                       android:text="@string/balance_payable"
                       android:id="@+id/tv_balance_txt"
                       android:textColor="@color/text_color_dark"
                       android:layout_margin="@dimen/margin_two"
                       android:textSize="@dimen/activity_textSize_small"/>
                   <TextView
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:layout_height="wrap_content"
                       android:id="@+id/tv_balance_payable"
                       android:gravity="end"
                       android:textColor="@color/text_color_dark"
                       android:layout_margin="@dimen/margin_two"
                       android:textSize="@dimen/activity_textSize_small"/>
               </LinearLayout>


           </LinearLayout>

       </androidx.cardview.widget.CardView>
       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:id="@+id/cv_emi_list"
           android:layout_margin="@dimen/margin_five"
           android:background="@color/white"
           android:visibility="gone"
           android:padding="@dimen/margin_three">
           <androidx.recyclerview.widget.RecyclerView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_margin="@dimen/margin_five"
               android:id="@+id/rcv_emi_list"
               />
       </androidx.cardview.widget.CardView>
   </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tv_no_data"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="No Records Found"/>
</LinearLayout>