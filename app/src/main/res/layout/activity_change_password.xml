<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.ChangePasswordActivity"
    android:orientation="vertical"
    android:id="@+id/ll_root"
    android:gravity="center">
    <LinearLayout
        android:id="@+id/ll_layout_entry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/large_view_margin"
        android:layout_marginEnd="@dimen/large_view_margin"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="@drawable/three_side_border">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:textAllCaps="true"
            android:letterSpacing="0.1"
            android:padding="@dimen/elarge_view_margin"
            android:text="@string/change_password"
            android:textSize="@dimen/activity_textSize_small"
            android:textColor="@color/white"
            tools:targetApi="lollipop"
            android:id="@+id/tv_heading"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/view_margin"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/view_margin"
                    android:layout_marginRight="@dimen/view_margin">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/iv_userName"
                        app:srcCompat="@drawable/user"
                        android:layout_gravity="center"
                        android:paddingTop="@dimen/large_view_margin"
                        android:paddingBottom="@dimen/large_view_margin"
                        android:paddingLeft="@dimen/margin_five"
                        android:paddingRight="@dimen/margin_five"
                        android:contentDescription="@string/app_name"
                        android:visibility="gone"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingTop="@dimen/large_view_margin"
                        android:paddingBottom="@dimen/large_view_margin"
                        android:paddingLeft="@dimen/view_margin"
                        android:paddingRight="@dimen/view_margin"
                        android:hint="@string/old_password"
                        android:background="@null"
                        android:textColorHint="@color/text_color_table"
                        android:textColor="@color/text_color_light"
                        android:inputType="textPassword"
                        android:id="@+id/edt_old_password"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="@dimen/view_margin"
                    android:layout_marginEnd="@dimen/view_margin"
                    android:background="@color/colorPrimaryTrans"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/view_margin"
                    android:layout_marginRight="@dimen/view_margin">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/iv_password1"
                        app:srcCompat="@drawable/password"
                        android:layout_gravity="center"
                        android:paddingTop="@dimen/large_view_margin"
                        android:paddingBottom="@dimen/large_view_margin"
                        android:paddingLeft="@dimen/margin_five"
                        android:paddingRight="@dimen/margin_five"
                        android:visibility="gone"
                        android:contentDescription="@string/app_name"/>
                    <EditText
                        android:id="@+id/edt_new_Password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:hint="@string/new_password"
                        android:importantForAutofill="no"
                        android:inputType="textPassword"
                        android:paddingLeft="@dimen/view_margin"
                        android:paddingTop="@dimen/large_view_margin"
                        android:paddingRight="@dimen/view_margin"
                        android:paddingBottom="@dimen/large_view_margin"
                        android:textColor="@color/text_color_light"
                        android:textColorHint="@color/text_color_table"
                        tools:targetApi="o" />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="@dimen/view_margin"
                    android:layout_marginEnd="@dimen/view_margin"
                    android:background="@color/colorPrimaryTrans"
                    android:layout_marginBottom="@dimen/margin_five"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/view_margin"
                    android:layout_marginRight="@dimen/view_margin">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/iv_password"
                        app:srcCompat="@drawable/password"
                        android:layout_gravity="center"
                        android:paddingTop="@dimen/large_view_margin"
                        android:paddingBottom="@dimen/large_view_margin"
                        android:paddingLeft="@dimen/margin_five"
                        android:paddingRight="@dimen/margin_five"
                        android:visibility="gone"
                        android:contentDescription="@string/app_name"/>
                    <EditText
                        android:id="@+id/edt_confirmPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:hint="@string/confirm_password"
                        android:importantForAutofill="no"
                        android:inputType="textPassword"
                        android:paddingLeft="@dimen/view_margin"
                        android:paddingTop="@dimen/large_view_margin"
                        android:paddingRight="@dimen/view_margin"
                        android:paddingBottom="@dimen/large_view_margin"
                        android:textColor="@color/text_color_light"
                        android:textColorHint="@color/text_color_table"
                        tools:targetApi="o" />

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/view_margin"
                android:layout_marginEnd="@dimen/view_margin"
                android:background="@color/colorPrimaryTrans"
                android:layout_marginBottom="@dimen/margin_five"/>

            <LinearLayout
                android:id="@+id/ll_button_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/large_view_margin"
                android:layout_marginLeft="@dimen/view_margin"
                android:layout_marginRight="@dimen/view_margin"
                android:layout_marginBottom="@dimen/view_margin"
                android:paddingTop="@dimen/view_margin"
                android:paddingBottom="@dimen/view_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:letterSpacing="0.1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/activity_textSize_extra_small"
                    android:text="@string/save_changes"
                    android:padding="@dimen/margin_five"
                    tools:targetApi="lollipop"
                    android:id="@+id/tv_btn_update"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_layout_forgot_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/view_margin"
            android:layout_marginEnd="@dimen/view_margin"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginBottom="@dimen/margin_five">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/activity_textSize_extra_small"
                android:paddingStart="@dimen/margin_two"
                android:paddingEnd="@dimen/margin_two"
                android:text="@string/forgot_password_txt"
                android:textColor="@color/text_color_light"
                tools:ignore="RtlCompat" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textSize="@dimen/activity_textSize_extra_small"
                android:id="@+id/tv_forgotPassword"
                android:text="@string/click_here_forgot_password"
                android:textColor="@color/text_color_light"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_text_copyright"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/view_margin"
            android:layout_marginEnd="@dimen/view_margin"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/x_large_view_margin"
            android:layout_marginBottom="@dimen/margin_two"
            android:visibility="gone"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/activity_textSize_extra_small"
                android:id="@+id/tv_copyrights"
                android:paddingStart="@dimen/view_margin"
                android:paddingEnd="@dimen/view_margin"
                android:paddingTop="@dimen/view_margin"
                android:paddingBottom="@dimen/margin_five"
                android:text="@string/txt_copyright"
                android:textColor="@color/text_color_light"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>