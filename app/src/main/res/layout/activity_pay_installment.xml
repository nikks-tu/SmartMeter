<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.techuva.smartmeter.activity.RechargeActivity"
    android:orientation="vertical"
    android:id="@+id/ll_root_login">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/ll_back_btn">
            <ImageView
                android:layout_width="@dimen/activity_profile_margin"
                android:layout_height="@dimen/activity_profile_margin"
                android:src="@drawable/back"
                android:contentDescription="@string/app_name"
                android:id="@+id/iv_back_btn"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/view_margin"
                android:layout_marginLeft="@dimen/view_margin"/>
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAlignment="textStart"
            android:textSize="@dimen/activity_textSize_large"
            tools:ignore="RtlCompat"
            android:layout_marginLeft="@dimen/view_margin"
            android:layout_marginRight="@dimen/view_margin"
            android:padding="@dimen/margin_five"/>


    </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="horizontal">
      <ScrollView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:id="@+id/sv_layout_recharge"
          android:visibility="gone">
          <LinearLayout
              android:id="@+id/ll_layout_recharge"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginStart="@dimen/large_view_margin"
              android:layout_marginEnd="@dimen/large_view_margin"
              android:orientation="vertical"
              android:layout_gravity="center"
              android:background="@drawable/three_side_border"
              android:visibility="gone">
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@color/colorPrimary"
                  android:gravity="center"
                  android:textAllCaps="true"
                  android:letterSpacing="0.1"
                  android:padding="@dimen/elarge_view_margin"
                  android:text="@string/recharge_meter"
                  android:textSize="@dimen/activity_textSize_small"
                  android:textColor="@color/white"
                  tools:targetApi="lollipop"
                  android:id="@+id/tv_heading_recharge"/>
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:padding="@dimen/view_margin"
                  android:orientation="vertical">

                  <LinearLayout
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:layout_marginLeft="@dimen/view_margin"
                          android:layout_marginRight="@dimen/view_margin">
                          <ImageView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:id="@+id/iv_userName"
                              app:srcCompat="@drawable/user"
                              android:layout_gravity="center"
                              android:visibility="gone"
                              android:paddingTop="@dimen/large_view_margin"
                              android:paddingBottom="@dimen/large_view_margin"
                              android:paddingLeft="@dimen/margin_five"
                              android:paddingRight="@dimen/margin_five"
                              android:contentDescription="@string/app_name"/>
                          <TextView
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:text="@string/tell_us_your_usn"
                              android:textColor="@color/text_color_light"
                              android:textSize="@dimen/activity_textSize_extra_small"
                              android:id="@+id/tv_usn_heading"/>
                          <EditText
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_gravity="center"
                              android:paddingTop="@dimen/view_margin"
                              android:paddingBottom="@dimen/view_margin"
                              android:paddingLeft="@dimen/margin_five"
                              android:paddingRight="@dimen/margin_five"
                              android:hint="@string/usn_"
                              android:background="@null"
                              android:textColorHint="@color/text_color_table"
                              android:textColor="@color/text_color_light"
                              android:inputType="text"
                              android:id="@+id/edt_usn_num"/>

                      </LinearLayout>
                      <View
                          android:layout_width="match_parent"
                          android:layout_height="1dp"
                          android:layout_marginStart="@dimen/view_margin"
                          android:layout_marginEnd="@dimen/view_margin"
                          android:background="@color/colorPrimaryTrans"/>
                      <RadioGroup
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:layout_margin="@dimen/margin_five"
                          android:id="@+id/rg_connection_type">
                          <RadioButton
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_weight="1"
                              android:text="@string/prepaid"
                              android:id="@+id/rb_prepaid"
                              android:textColor="@color/text_color_dark"/>

                          <RadioButton
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_weight="1"
                              android:text="@string/postpaid"
                              android:id="@+id/rb_postpaid"
                              android:textColor="@color/text_color_dark"
                              android:checked="true"/>
                      </RadioGroup>


                      <View
                          android:layout_width="match_parent"
                          android:layout_height="1dp"
                          android:layout_marginStart="@dimen/view_margin"
                          android:layout_marginEnd="@dimen/view_margin"
                          android:background="@color/colorPrimaryTrans"
                          android:layout_marginBottom="@dimen/margin_five"/>


                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:id="@+id/ll_ppayment_option">

                          <RadioGroup
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:id="@+id/rg_payment_option">
                              <RadioButton
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:layout_weight="1"
                                  android:text="@string/credit_debit_card"
                                  android:textColor="@color/text_color_dark"
                                  android:layout_margin="@dimen/margin_five"
                                  android:id="@+id/rb_card_type"/>
                              <RadioButton
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:layout_weight="1"
                                  android:text="@string/recharge_card"
                                  android:textColor="@color/text_color_dark"
                                  android:layout_margin="@dimen/margin_five"
                                  android:id="@+id/rb_recharge_card"
                                  android:visibility="gone"/>
                              <RadioButton
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:layout_weight="1"
                                  android:text="@string/life_saver"
                                  android:textColor="@color/text_color_dark"
                                  android:layout_margin="@dimen/margin_five"
                                  android:id="@+id/rb_life_saver"
                                  android:visibility="gone"/>
                          </RadioGroup>
                      </LinearLayout>


                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:id="@+id/ll_denominations"
                          android:visibility="gone">
                          <TextView
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:text="@string/choose_your_plan"
                              android:textColor="@color/text_color_light"
                              android:layout_marginStart="@dimen/view_margin"
                              android:layout_marginEnd="@dimen/view_margin"
                              android:layout_marginTop="@dimen/margin_five"
                              android:layout_marginBottom="@dimen/margin_five"
                              android:textSize="@dimen/activity_textSize_extra_small"/>
                          <androidx.recyclerview.widget.RecyclerView
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:id="@+id/rcv_denominations" />
                          <View
                              android:layout_width="match_parent"
                              android:layout_height="1dp"
                              android:layout_marginStart="@dimen/view_margin"
                              android:layout_marginEnd="@dimen/view_margin"
                              android:background="@color/colorPrimaryTrans"
                              android:layout_marginTop="@dimen/margin_five"
                              android:layout_marginBottom="@dimen/margin_five"/>
                      </LinearLayout>

                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:visibility="visible"
                          android:layout_marginTop="@dimen/margin_five"
                          android:layout_marginLeft="@dimen/view_margin"
                          android:layout_marginRight="@dimen/view_margin">
                          <ImageView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:id="@+id/iv_password"
                              app:srcCompat="@drawable/password"
                              android:layout_gravity="center"
                              android:paddingTop="@dimen/large_view_margin"
                              android:paddingBottom="@dimen/large_view_margin"
                              android:paddingLeft="@dimen/margin_five"
                              android:paddingRight="@dimen/margin_five"
                              android:visibility="gone"
                              android:contentDescription="@string/app_name"/>
                          <TextView
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:text="@string/amount_to_recharge"
                              android:textColor="@color/text_color_light"
                              android:textSize="@dimen/activity_textSize_extra_small"
                              android:id="@+id/tv_amount_heading"/>
                          <EditText
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_gravity="center"
                              android:paddingTop="@dimen/view_margin"
                              android:paddingBottom="@dimen/view_margin"
                              android:paddingLeft="@dimen/margin_five"
                              android:paddingRight="@dimen/margin_five"
                              android:hint="@string/amount"
                              android:background="@null"
                              android:textColorHint="@color/text_color_table"
                              android:textColor="@color/text_color_light"
                              android:importantForAutofill="no"
                              android:id="@+id/edt_amount"
                              tools:targetApi="o"/>

                      </LinearLayout>
                  </LinearLayout>

                  <View
                      android:layout_width="match_parent"
                      android:layout_height="1dp"
                      android:layout_marginStart="@dimen/view_margin"
                      android:layout_marginEnd="@dimen/view_margin"
                      android:id="@+id/view_amt"
                      android:background="@color/colorPrimaryTrans"
                      android:layout_marginBottom="@dimen/margin_five"/>

                  <LinearLayout
                      android:id="@+id/ll_button_recharge"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:background="@color/colorPrimary"
                      android:gravity="center"
                      android:orientation="vertical"
                      android:layout_marginTop="@dimen/large_view_margin"
                      android:layout_marginLeft="@dimen/view_margin"
                      android:layout_marginRight="@dimen/view_margin"
                      android:paddingTop="@dimen/view_margin"
                      android:paddingBottom="@dimen/view_margin">
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textAllCaps="true"
                          android:letterSpacing="0.1"
                          android:textColor="@color/white"
                          android:textSize="@dimen/activity_textSize_extra_small"
                          android:text="@string/recharge"
                          android:padding="@dimen/margin_five"
                          android:id="@+id/tv_btn_recharge_text"
                          tools:targetApi="lollipop" />
                  </LinearLayout>
              </LinearLayout>
              <LinearLayout
                  android:id="@+id/ll_layout_forgot_password"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="@dimen/view_margin"
                  android:layout_marginEnd="@dimen/view_margin"
                  android:orientation="horizontal"
                  android:layout_gravity="center"
                  android:gravity="center"
                  android:visibility="gone"
                  android:layout_marginBottom="@dimen/margin_five">
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="@dimen/activity_textSize_extra_small"
                      android:paddingStart="@dimen/margin_two"
                      android:paddingEnd="@dimen/margin_two"
                      android:text="@string/forgot_password_txt"
                      android:textColor="@color/text_color_light"
                      tools:ignore="RtlCompat" />
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:gravity="start"
                      android:textSize="@dimen/activity_textSize_extra_small"
                      android:id="@+id/tv_forgotPassword"
                      android:text="@string/click_here_forgot_password"
                      android:textColor="@color/text_color_light"/>
              </LinearLayout>
              <LinearLayout
                  android:id="@+id/ll_text_copyright"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="@dimen/view_margin"
                  android:layout_marginEnd="@dimen/view_margin"
                  android:orientation="vertical"
                  android:visibility="gone"
                  android:layout_marginTop="@dimen/x_large_view_margin"
                  android:layout_marginBottom="@dimen/margin_two">
                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:textSize="@dimen/activity_textSize_extra_small"
                      android:id="@+id/tv_copyrights"
                      android:paddingStart="@dimen/view_margin"
                      android:paddingEnd="@dimen/view_margin"
                      android:paddingTop="@dimen/view_margin"
                      android:paddingBottom="@dimen/margin_five"
                      android:text="@string/txt_copyright"
                      android:textColor="@color/text_color_light"/>
              </LinearLayout>

          </LinearLayout>
      </ScrollView>

       <LinearLayout
           android:id="@+id/ll_review_recharge"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginStart="@dimen/large_view_margin"
           android:layout_marginEnd="@dimen/large_view_margin"
           android:orientation="vertical"
           android:layout_gravity="center"
           android:background="@drawable/three_side_border"
           android:visibility="visible">
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@color/colorPrimary"
               android:gravity="center"
               android:textAllCaps="true"
               android:letterSpacing="0.1"
               android:padding="@dimen/elarge_view_margin"
               android:text="@string/review_order"
               android:textSize="@dimen/activity_textSize_small"
               android:textColor="@color/white"
               tools:targetApi="lollipop" />
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:padding="@dimen/view_margin"
               android:orientation="vertical">

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:layout_marginTop="@dimen/margin_five"
                   android:layout_marginBottom="@dimen/margin_five">
                   <ScrollView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="vertical">
                           <LinearLayout
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:orientation="vertical"
                               android:layout_marginLeft="@dimen/view_margin"
                               android:layout_marginRight="@dimen/view_margin">
                               <TextView
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:id="@+id/tv_usn_text"
                                   android:text="@string/usn_to_recharge"
                                   android:textColor="@color/text_color_light"
                                   android:textSize="@dimen/activity_textSize_extra_small"
                                   android:layout_marginTop="@dimen/margin_three"
                                   android:layout_marginBottom="@dimen/margin_three"/>
                               <TextView
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:textSize="@dimen/activity_textSize_small"
                                   android:text="@string/usn_"
                                   android:textColor="@color/text_color_dark"
                                   android:id="@+id/tv_usn_num_confirm"
                                   android:layout_marginTop="@dimen/margin_three"
                                   android:layout_marginBottom="@dimen/margin_three"/>
                           </LinearLayout>
                           <View
                               android:layout_width="match_parent"
                               android:layout_height="1dp"
                               android:layout_marginStart="@dimen/view_margin"
                               android:layout_marginEnd="@dimen/view_margin"
                               android:background="@color/colorPrimaryTrans"
                               android:layout_margin="@dimen/margin_five"/>
                           <LinearLayout
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:orientation="vertical"
                               android:id="@+id/ll_paid_by"
                               android:layout_marginLeft="@dimen/view_margin"
                               android:layout_marginRight="@dimen/view_margin">
                               <TextView
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:id="@+id/tv_paid_by_text"
                                   android:text="@string/paid_by"
                                   android:textColor="@color/text_color_light"
                                   android:textSize="@dimen/activity_textSize_extra_small"
                                   android:layout_marginTop="@dimen/margin_three"
                                   android:layout_marginBottom="@dimen/margin_three"/>
                               <EditText
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:textSize="@dimen/activity_textSize_small"
                                   android:textColor="@color/text_color_dark"
                                   android:id="@+id/edt_paid_by"
                                   android:background="@null"
                                   android:layout_marginTop="@dimen/margin_three"
                                   android:layout_marginBottom="@dimen/margin_three"/>
                           </LinearLayout>
                           <View
                               android:layout_width="match_parent"
                               android:layout_height="1dp"
                               android:layout_marginStart="@dimen/view_margin"
                               android:layout_marginEnd="@dimen/view_margin"
                               android:id="@+id/view_paid_by"
                               android:background="@color/colorPrimaryTrans"
                               android:layout_margin="@dimen/margin_five"/>
                           <LinearLayout
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:orientation="vertical"
                               android:layout_marginTop="@dimen/margin_five"
                               android:layout_marginBottom="@dimen/margin_five">
                               <LinearLayout
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:orientation="vertical"
                                   android:layout_marginLeft="@dimen/view_margin"
                                   android:layout_marginRight="@dimen/view_margin">
                                   <TextView
                                       android:layout_width="match_parent"
                                       android:layout_height="wrap_content"
                                       android:id="@+id/tv_comments_text"
                                       android:text="@string/comments"
                                       android:textColor="@color/text_color_light"
                                       android:textSize="@dimen/activity_textSize_extra_small"
                                       android:layout_marginTop="@dimen/margin_three"
                                       android:layout_marginBottom="@dimen/margin_three"/>
                                   <EditText
                                       android:layout_width="match_parent"
                                       android:layout_height="wrap_content"
                                       android:textSize="@dimen/activity_textSize_small"
                                       android:textColor="@color/text_color_dark"
                                       android:id="@+id/edt_comments"
                                       android:layout_marginTop="@dimen/margin_three"
                                       android:layout_marginBottom="@dimen/margin_three"
                                       android:background="@null"/>
                               </LinearLayout>
                               <View
                                   android:layout_width="match_parent"
                                   android:layout_height="1dp"
                                   android:layout_marginStart="@dimen/view_margin"
                                   android:layout_marginEnd="@dimen/view_margin"
                                   android:background="@color/colorPrimaryTrans"
                                   android:layout_margin="@dimen/margin_five"/>

                           </LinearLayout>
                           <View
                               android:layout_width="match_parent"
                               android:layout_height="1dp"
                               android:layout_marginStart="@dimen/view_margin"
                               android:layout_marginEnd="@dimen/view_margin"
                               android:background="@color/colorPrimaryTrans"
                               android:layout_marginBottom="@dimen/margin_five"
                               android:visibility="gone"/>

                           <androidx.recyclerview.widget.RecyclerView
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:id="@+id/rcv_payment_breakup"
                               android:orientation="vertical"
                               android:overScrollMode="never"/>
                           <androidx.recyclerview.widget.RecyclerView
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:id="@+id/rcv_payment_taxes"
                               android:orientation="vertical"
                               android:overScrollMode="never"/>
                       </LinearLayout>
                   </ScrollView>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       android:id="@+id/ll_total_amt"
                       android:layout_margin="@dimen/margin_two"
                       android:gravity="end">
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:id="@+id/tv_total_amt_txt"
                           android:textSize="@dimen/activity_textSize_small_16"
                           android:textColor="@color/text_color_dark"
                           android:text="@string/total_amt_txt"
                           android:layout_margin="@dimen/margin_two"/>
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:id="@+id/tv_total_amt"
                           android:textSize="@dimen/activity_textSize_small_16"
                           android:textColor="@color/text_color_dark"
                           android:text="@string/vat_txt"
                           android:layout_margin="@dimen/margin_two"/>
                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal">
                       <LinearLayout
                           android:id="@+id/ll_button_cancel"
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:layout_gravity="center"
                           android:background="@color/text_color_red"
                           android:gravity="center"
                           android:orientation="vertical"
                           android:layout_marginLeft="@dimen/view_margin"
                           android:layout_marginRight="@dimen/view_margin"
                           android:paddingTop="@dimen/view_margin"
                           android:paddingBottom="@dimen/view_margin"
                           android:layout_weight="1">
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:textAllCaps="true"
                               android:letterSpacing="0.1"
                               android:textColor="@color/white"
                               android:textSize="@dimen/activity_textSize_extra_small"
                               android:text="@string/cancel"
                               android:padding="@dimen/margin_five"
                               tools:targetApi="lollipop"/>
                       </LinearLayout>
                       <LinearLayout
                           android:id="@+id/ll_button_pay"
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:layout_gravity="center"
                           android:background="@color/text_color_green"
                           android:gravity="center"
                           android:orientation="vertical"
                           android:layout_marginLeft="@dimen/margin_five"
                           android:layout_marginRight="@dimen/margin_five"
                           android:paddingTop="@dimen/view_margin"
                           android:paddingBottom="@dimen/view_margin"
                           android:layout_weight="1">

                           <TextView
                               android:id="@+id/tv_pay"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:textAllCaps="true"
                               android:letterSpacing="0.1"
                               android:textColor="@color/white"
                               android:textSize="@dimen/activity_textSize_extra_small"
                               android:text="@string/pay"
                               android:padding="@dimen/margin_five"
                               tools:targetApi="lollipop" />
                       </LinearLayout>
                   </LinearLayout>
               </LinearLayout>
           </LinearLayout>
       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           android:layout_gravity="center"
           android:gravity="center"
           android:id="@+id/ll_no_postpaid_bill">
           <TextView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:gravity="center"
               android:text="@string/no_pending_bill"
               android:textSize="@dimen/activity_textSize_small"
               android:textColor="@color/text_color_dark"/>
       </LinearLayout>
   </LinearLayout>
</LinearLayout>

