<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/margin_five"
    android:layout_marginRight="@dimen/margin_five"
    android:layout_marginTop="@dimen/margin_five"
    android:layout_marginBottom="@dimen/margin_five"
    android:elevation="0dp"
    android:id="@+id/ll_main"
    android:orientation="horizontal"
    tools:targetApi="lollipop">
  <androidx.cardview.widget.CardView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:cardCornerRadius="@dimen/margin_five"
      android:elevation="0dp"
      android:id="@+id/cv_data">

      <TextView
          android:id="@+id/tv_denomination_amt"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_gravity="center"
          android:gravity="center"
          android:text=""
          android:paddingTop="@dimen/view_margin"
          android:paddingBottom="@dimen/view_margin"
          android:paddingLeft="@dimen/large_view_margin"
          android:paddingRight="@dimen/large_view_margin"
          android:textColor="@color/black"
          android:textSize="@dimen/activity_textSize_extra_small" />
  </androidx.cardview.widget.CardView>
</LinearLayout>