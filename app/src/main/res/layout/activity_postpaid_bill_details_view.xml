<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PostpaidBillDetailsViewActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        android:layout_gravity="center"
        android:id="@+id/ll_first">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/ll_back_btn">
            <ImageView
                android:layout_width="@dimen/activity_profile_margin"
                android:layout_height="@dimen/activity_profile_margin"
                android:src="@drawable/back"
                android:contentDescription="@string/app_name"
                android:id="@+id/iv_back_btn"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/view_margin"
                android:layout_marginLeft="@dimen/view_margin"/>
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/bill_detail_heading"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAlignment="textStart"
            android:textSize="@dimen/activity_textSize_large"
            android:id="@+id/tv_toolbar_heading"
            tools:ignore="RtlCompat"
            android:layout_marginLeft="@dimen/view_margin"
            android:layout_marginRight="@dimen/view_margin"
            android:padding="@dimen/margin_five"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorPrimary"
        android:padding="@dimen/margin_five"
        android:layout_below="@+id/ll_first"
        android:id="@+id/ll_second">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/margin_three"
            android:layout_marginBottom="@dimen/margin_three">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="center"
                android:textSize="@dimen/activity_textSize_small_16"
                android:textColor="@color/white"
                android:id="@+id/tv_bill_from"
                android:padding="@dimen/margin_one"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="center"
                android:textSize="22sp"
                android:textColor="@color/white"
                android:id="@+id/tv_bill_amt"
                android:padding="@dimen/margin_one"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="@color/white"
                android:layout_marginLeft="@dimen/view_margin"
                android:layout_marginRight="@dimen/view_margin"
                android:layout_marginTop="@dimen/margin_five"
                android:layout_marginBottom="@dimen/margin_five"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="center"
                android:textSize="@dimen/activity_textSize_small_16"
                android:textColor="@color/white"
                android:id="@+id/tv_bill_date"
                android:padding="@dimen/margin_one"
                android:layout_marginBottom="@dimen/margin_two"/>


        </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:layout_below="@+id/ll_second"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/margin_five">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_three"
                app:cardCornerRadius="@dimen/margin_two"
                android:padding="@dimen/margin_two">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/margin_five">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/ll_download">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="@string/billing_details"
                            android:textSize="@dimen/activity_textSize_large"
                            android:textColor="@color/text_color_dark"
                            android:id="@+id/tv_bill_heading"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/activity_textSize_small_16"
                            android:layout_weight="1"
                            android:text="@string/download_bill"
                            android:contentDescription="@string/app_name"
                            android:id="@+id/tv_download"
                            android:layout_gravity="end"
                            android:gravity="end"
                            android:visibility="visible"
                            android:textColor="@color/colorPrimary"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/text_color_light"
                        android:layout_marginTop="@dimen/margin_two"
                        android:layout_marginBottom="@dimen/margin_two"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="@dimen/view_margin">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/margin_three"
                            android:layout_marginBottom="@dimen/margin_three">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="@string/usn_full"
                                android:gravity="start"
                                android:textSize="@dimen/activity_textSize_small_16"
                                android:textColor="@color/text_color_dark"
                                android:id="@+id/tv_usn_txt"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:gravity="end"
                                android:textSize="@dimen/activity_textSize_small_16"
                                android:textColor="@color/text_color_light"
                                android:id="@+id/tv_usn_num"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/margin_three"
                            android:layout_marginBottom="@dimen/margin_three">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="@string/bill_id"
                                android:gravity="start"
                                android:textSize="@dimen/activity_textSize_small_16"
                                android:textColor="@color/text_color_dark"
                                android:id="@+id/tv_bill_id_txt"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1.5"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:gravity="end"
                                android:textSize="@dimen/activity_textSize_small_16"
                                android:textColor="@color/text_color_light"
                                android:id="@+id/tv_bill_id"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/margin_three"
                            android:layout_marginBottom="@dimen/margin_three">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="@string/units_consumed_"
                                android:gravity="start"
                                android:textSize="@dimen/activity_textSize_small_16"
                                android:textColor="@color/text_color_dark"
                                android:id="@+id/tv_bill_total_units_txt"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1.5"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:gravity="end"
                                android:textSize="@dimen/activity_textSize_small_16"
                                android:textColor="@color/text_color_light"
                                android:id="@+id/tv_bill_total_units"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/margin_three"
                            android:layout_marginBottom="@dimen/margin_three">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="@string/due_date_"
                                android:gravity="start"
                                android:textSize="@dimen/activity_textSize_small_16"
                                android:textColor="@color/text_color_dark"
                                android:id="@+id/tv_bill_due_txt"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1.5"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:gravity="end"
                                android:textSize="@dimen/activity_textSize_small_16"
                                android:textColor="@color/text_color_light"
                                android:id="@+id/tv_bill_due"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/margin_three"
                            android:layout_marginBottom="@dimen/margin_three">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="@string/status_pp"
                                android:gravity="start"
                                android:textSize="@dimen/activity_textSize_small_16"
                                android:textColor="@color/text_color_dark"
                                android:id="@+id/tv_bill_status_txt"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1.5"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:gravity="end"
                                android:textSize="@dimen/activity_textSize_small_16"
                                android:textColor="@color/text_color_light"
                                android:id="@+id/tv_bill_status"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:id="@+id/ll_payment"
                            android:visibility="gone">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="@dimen/margin_three"
                                android:layout_marginBottom="@dimen/margin_three">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:text="@string/paid_on"
                                    android:gravity="start"
                                    android:textSize="@dimen/activity_textSize_small_16"
                                    android:textColor="@color/text_color_dark"
                                    android:id="@+id/tv_bill_payment_mode_txt"/>
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1.5"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:gravity="end"
                                    android:textSize="@dimen/activity_textSize_small_16"
                                    android:textColor="@color/text_color_light"
                                    android:id="@+id/tv_bill_payment_mode"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="@dimen/margin_three"
                                android:layout_marginBottom="@dimen/margin_three">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:text="@string/payment_ref_pp"
                                    android:gravity="start"
                                    android:textSize="@dimen/activity_textSize_small_16"
                                    android:textColor="@color/text_color_dark"
                                    android:id="@+id/tv_bill_payment_ref_txt"/>
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1.5"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:gravity="end"
                                    android:textSize="@dimen/activity_textSize_small_16"
                                    android:textColor="@color/text_color_light"
                                    android:id="@+id/tv_bill_payment_ref"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="@dimen/margin_three"
                                android:layout_marginBottom="@dimen/margin_three">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:text="@string/payment_mode"
                                    android:gravity="start"
                                    android:textSize="@dimen/activity_textSize_small_16"
                                    android:textColor="@color/text_color_dark"
                                    android:id="@+id/tv_bill_payment_mode_by_txt"/>
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1.5"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:gravity="end"
                                    android:textSize="@dimen/activity_textSize_small_16"
                                    android:textColor="@color/text_color_light"
                                    android:id="@+id/tv_bill_payment_mode_by"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="@dimen/margin_three"
                                android:layout_marginBottom="@dimen/margin_three">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:text="@string/billing_address"
                                    android:gravity="start"
                                    android:textSize="@dimen/activity_textSize_small_16"
                                    android:textColor="@color/text_color_dark"
                                    android:id="@+id/tv_bill_payment_billing_address_txt"/>
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1.5"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:gravity="end"
                                    android:textSize="@dimen/activity_textSize_small_16"
                                    android:textColor="@color/text_color_light"
                                    android:id="@+id/tv_bill_payment_billing_address"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_three"
                app:cardCornerRadius="@dimen/margin_two"
                android:padding="@dimen/margin_two">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/margin_five">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/cost_breakup"
                        android:textSize="@dimen/activity_textSize_large"
                        android:textColor="@color/text_color_dark"
                        android:id="@+id/tv_bill_breakup"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/text_color_light"
                        android:layout_marginTop="@dimen/margin_two"
                        android:layout_marginBottom="@dimen/margin_two"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_five"
                        android:layout_marginBottom="@dimen/margin_five"
                        android:layout_marginLeft="@dimen/margin_five"
                        android:layout_marginRight="@dimen/margin_five"
                        android:id="@+id/rcv_payment_breakup"
                        android:focusable="false"
                        android:clickable="false"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_three"
                app:cardCornerRadius="@dimen/margin_two"
                android:padding="@dimen/margin_two">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/margin_five">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/ll_history"
                        android:layout_gravity="center"
                        android:gravity="center">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/units_heading"
                            android:textSize="@dimen/activity_textSize_large"
                            android:textColor="@color/text_color_dark"
                            android:id="@+id/tv_units_history"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:id="@+id/ll_down"
                            android:visibility="gone">
                            <ImageView
                                android:layout_width="@dimen/elarge_view_margin"
                                android:layout_height="@dimen/elarge_view_margin"
                                android:src="@drawable/down"
                                android:layout_margin="@dimen/margin_five"
                                android:tint="@color/text_color_dark"/>
                        </LinearLayout>
                    </LinearLayout>

                    <HorizontalScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/hv_units"
                        android:visibility="gone">
                    </HorizontalScrollView>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/text_color_light"
                        android:layout_marginTop="@dimen/margin_two"
                        android:layout_marginBottom="@dimen/margin_two"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:id="@+id/ll_units"
                        android:visibility="gone">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@color/colorPrimary"
                            android:paddingTop="@dimen/margin_five"
                            android:paddingBottom="@dimen/margin_five"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:weightSum="4">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.8"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="@string/dated_on"
                                android:layout_marginLeft="@dimen/margin_two"
                                android:layout_marginRight="@dimen/margin_two"
                                android:textColor="@color/white"
                                android:textSize="@dimen/activity_textSize_small_16"
                                android:id="@+id/tv_date"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.8"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="@string/meter_reading"
                                android:layout_marginLeft="@dimen/margin_two"
                                android:layout_marginRight="@dimen/margin_two"
                                android:textColor="@color/white"
                                android:textSize="@dimen/activity_textSize_small_16"
                                android:id="@+id/tv_kwh"
                                android:visibility="gone"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.8"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="@string/units"
                                android:textColor="@color/white"
                                android:textSize="@dimen/activity_textSize_small_16"
                                android:id="@+id/tv_consumed_units"
                                android:layout_marginLeft="@dimen/margin_two"
                                android:layout_marginRight="@dimen/margin_two"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1.2"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="@string/unit_rate"
                                android:textColor="@color/white"
                                android:layout_marginLeft="@dimen/margin_two"
                                android:layout_marginRight="@dimen/margin_two"
                                android:textSize="@dimen/activity_textSize_small_16"
                                android:id="@+id/tv_unit_rate"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1.2"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="@string/amount_ngn"
                                android:textColor="@color/white"
                                android:layout_marginLeft="@dimen/margin_two"
                                android:layout_marginRight="@dimen/margin_two"
                                android:textSize="@dimen/activity_textSize_small_16"
                                android:id="@+id/tv_amount"/>
                        </LinearLayout>
                        <ListView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/lv_consumed_data"
                            android:visibility="visible"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ll_no_units"
                        android:orientation="horizontal"
                        android:visibility="visible"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="@dimen/margin_five">
                        <TextView
                            android:padding="@dimen/margin_five"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_no_units"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textColor="@color/text_color_light"
                            android:textSize="@dimen/activity_textSize_small"
                            android:text="@string/no_records_found"/>
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/nodata"
        android:id="@+id/tv_nodata"
        android:visibility="gone"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="@dimen/activity_textSize_small"/>
</RelativeLayout>