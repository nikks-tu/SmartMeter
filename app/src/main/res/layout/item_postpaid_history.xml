<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_five"
            android:background="@color/white"
            app:cardBackgroundColor="@color/white"
            android:padding="@dimen/margin_two">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="@dimen/view_margin"
                            android:layout_marginRight="@dimen/view_margin">

                              <LinearLayout
                                  android:layout_width="0dp"
                                  android:layout_height="wrap_content"
                                  android:orientation="horizontal"
                                  android:layout_weight="1.5">
                                      <TextView
                                          android:layout_width="wrap_content"
                                          android:layout_height="match_parent"
                                          android:text="@string/billed_on"
                                          android:textSize="@dimen/activity_textSize_small_16"
                                          android:paddingTop="@dimen/margin_five"
                                          android:paddingBottom="@dimen/margin_five"
                                          android:background="@color/white"
                                          android:textColor="@color/colorPrimary"
                                          android:id="@+id/tv_bill_date_from"
                                          android:gravity="start|center"/>
                                      <TextView
                                          android:layout_width="wrap_content"
                                          android:layout_height="wrap_content"
                                          android:text="@string/to"
                                          android:textSize="@dimen/activity_textSize_small_16"
                                          android:paddingTop="@dimen/margin_five"
                                          android:paddingBottom="@dimen/margin_five"
                                          android:background="@color/white"
                                          android:textColor="@color/colorPrimary"
                                          android:id="@+id/tv_to"
                                          android:layout_marginLeft="@dimen/margin_five"
                                          android:layout_marginRight="@dimen/margin_five"
                                          android:gravity="center"/>
                                      <TextView
                                          android:layout_width="wrap_content"
                                          android:layout_height="wrap_content"
                                          android:text="@string/billed_on"
                                          android:textSize="@dimen/activity_textSize_small_16"
                                          android:paddingTop="@dimen/margin_five"
                                          android:paddingBottom="@dimen/margin_five"
                                          android:background="@color/white"
                                          android:textColor="@color/colorPrimary"
                                          android:id="@+id/tv_bill_date_to"
                                          android:gravity="start"
                                          />
                              </LinearLayout>

                                <TextView
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:text="@string/status_"
                                    android:textSize="@dimen/activity_textSize_small_16"
                                    android:padding="@dimen/margin_two"
                                    android:background="@color/white"
                                    android:textColor="@color/text_color_light"
                                    android:id="@+id/tv_status"
                                    android:gravity="end|center"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="@dimen/view_margin"
                            android:layout_marginRight="@dimen/view_margin"
                            android:layout_marginBottom="@dimen/margin_two">

                                <TextView
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/units_consumed"
                                    android:textSize="@dimen/activity_textSize_small_16"
                                    android:padding="@dimen/margin_two"
                                    android:background="@color/white"
                                    android:textColor="@color/text_color_light"
                                    android:id="@+id/tv_unit_consumed_txt"
                                    android:gravity="start"
                                    android:visibility="visible"/>
                                <TextView
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/units_consumed"
                                    android:textSize="@dimen/activity_textSize_small_16"
                                    android:padding="@dimen/margin_two"
                                    android:background="@color/white"
                                    android:textColor="@color/text_color_light"
                                    android:id="@+id/tv_unit_consumed"
                                    android:gravity="end"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="@dimen/view_margin"
                            android:layout_marginRight="@dimen/view_margin"
                            android:visibility="gone">

                                <TextView
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/bill_amount"
                                    android:textSize="@dimen/activity_textSize_small_16"
                                    android:padding="@dimen/margin_two"
                                    android:id="@+id/tv_bill_amt_txt"
                                    android:gravity="start"
                                    />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="@dimen/view_margin"
                            android:layout_marginRight="@dimen/view_margin"
                            android:layout_marginBottom="@dimen/margin_two">

                                <TextView
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/due_date"
                                    android:textSize="@dimen/activity_textSize_small_16"
                                    android:padding="@dimen/margin_two"
                                    android:background="@color/white"
                                    android:textColor="@color/text_color_light"
                                    android:id="@+id/tv_due_date_txt"
                                    android:gravity="start"
                                    android:visibility="gone"/>

                                <TextView
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/due_date"
                                    android:textSize="@dimen/activity_textSize_small_16"
                                    android:padding="@dimen/margin_two"
                                    android:background="@color/white"
                                    android:textColor="@color/text_color_light"
                                    android:id="@+id/tv_due_date"
                                    android:gravity="start"/>
                                <TextView
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/bill_amount"
                                    android:textSize="@dimen/activity_textSize_small_16"
                                    android:padding="@dimen/margin_two"
                                    android:background="@color/white"
                                    android:textColor="@color/colorPrimary"
                                    android:id="@+id/tv_bill_amt"
                                    android:gravity="end"/>


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            android:layout_marginLeft="@dimen/view_margin"
                            android:layout_marginRight="@dimen/view_margin">

                                <TextView
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/status_"
                                    android:textSize="@dimen/activity_textSize_small_16"
                                    android:padding="@dimen/margin_two"
                                    android:background="@color/white"
                                    android:textColor="@color/text_color_light"
                                    android:id="@+id/tv_status_txt"
                                    android:gravity="start"/>
                        </LinearLayout>

                </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>
